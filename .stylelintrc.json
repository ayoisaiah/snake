{
  "extends": "stylelint-config-standard",
  "rules": {
    "max-empty-lines": 3,
    "declaration-block-no-duplicate-properties": false,
    "function-calc-no-invalid": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "at-root",
          "debug",
          "warn",
          "error",
          "if",
          "else",
          "for",
          "each",
          "while",
          "mixin",
          "include",
          "content",
          "return",
          "function"
        ]
      }
    ]
  }
}
